@model IEnumerable<db1.Books>

@{
    ViewBag.Title = "Index";
}

<h2>图书管理系统</h2>

<p>
    @Html.ActionLink("新增", "xinzeng")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookCoverUrl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookCoverUrl)
        </td>
        <td>
            @Html.ActionLink("修改方式", "xiugai", new { id = item.BookId })
            @Html.ActionLink("修改方式1", "xiugai1", new { id = item.BookId })
            @Html.ActionLink("修改方式2", "xiugai2", new { id = item.BookId })
            @Html.ActionLink("详情", "xiangqing", new { id = item.BookId })
            @Html.ActionLink("删除", "delete", new { id = item.BookId })
        </td>
    </tr>
}

</table>
